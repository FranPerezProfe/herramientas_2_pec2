    "name": "Francisco Javier Pérez Arribas",
    "email": "fperezarr@uoc.edu"
  },
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.0",
    "autoprefixer": "^10.4.8",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.7.0",
    "postcss-preset-env": "^7.8.1",
    "posthtml-include": "^1.7.4",
    "rimraf": "^3.0.2",
    "sharp": "^0.32.1",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.0",
